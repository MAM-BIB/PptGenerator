{
  "name": "pptgenerator",
  "version": "1.0.0",
  "description": "This projekt is used to mange ppt files",
  "main": "./build/main.js",
  "scripts": {
    "tsc": "tsc",
    "build": "npm run lint && tsc && copyfiles -u 1 ./src/**/*.html ./build && copyfiles -u 1 ./src/**/*.min.css ./build && copyfiles -u 1 ./src/**/*.svg ./build",
    "clean": "rimraf ./build",
    "start": "npm run clean && npm run build && electron .",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --fix --ext .ts"
  },
  "repository": {
    "type": "git",
    "url": "https://paiqo@dev.azure.com/paiqo/PptGenerator/_git/PptGenerator"
  },
  "keywords": [
    "ppt"
  ],
  "author": "Marc Beyer, Marco Kuehn, Alex Rechtin",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^17.0.19",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.10.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-plugin-import": "^2.25.4",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@electron/remote": "^2.0.5",
    "electron": "^17.1.0"
  }
}
